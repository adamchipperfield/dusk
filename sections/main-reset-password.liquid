<div class="grid no-gutter">
  <div class="col xs12 m4 offset-m4">
    {% form 'reset_customer_password' %}
      <h1 class="text-h4 margin">{{ 'customer.reset_password.title' | t }}</h1>

      {{ form.errors | default_errors }}

      <div class="form-group">
        <div class="form-field">
          <label for="{{ section.id | append: '-password' }}">
            {{ 'form.password' | t }}
          </label>

          <input
            id="{{ section.id | append: '-password' }}"
            name="customer[password]"
            type="password"
          >
        </div>

        <div class="form-field">
          <label for="{{ section.id | append: '-password-confirmation' }}">
            {{ 'form.confirm_password' | t }}
          </label>

          <input
            id="{{ section.id | append: '-password-confirmation' }}"
            name="customer[password_confirmation]"
            type="password"
          >
        </div>

        <button class="button">{{ 'form.submit' | t }}</button>
      </div>
    {% endform %}
  </div>
</div>

{% schema %}
{
  "class": "container section-margin"
}
{% endschema %}
