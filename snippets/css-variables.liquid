{% capture chevron_down_icon %}{% render 'icon-direction', icon: 'chevron-down' %}{% endcapture %}

<style>
  :root {

    /**
     * Declares scaled spacing variables.
     * - https://carbondesignsystem.com/elements/spacing/overview/#spacing-scale
     */
    --spacing-2: 0.125rem;
    --spacing-4: 0.25rem;
    --spacing-8: 0.5rem;
    --spacing-12: 0.75rem;
    --spacing-16: 1rem;
    --spacing-24: 1.5rem;
    --spacing-32: 2rem;
    --spacing-40: 2.5rem;
    --spacing-48: 3rem;
    --spacing-64: 4rem;
    --spacing-80: 5rem;
    --spacing-96: 6rem;
    --spacing-160: 10rem;

    /**
     * Typography scale.
     * - https://carbondesignsystem.com/elements/typography/overview/#scale
     */
    --font-size-12: 0.75rem;
    --font-size-14: 0.875rem;
    --font-size-16: 1rem;
    --font-size-18: 1.125rem;
    --font-size-20: 1.25rem;
    --font-size-24: 1.5rem;
    --font-size-28: 1.75rem;
    --font-size-32: 2rem;
    --font-size-36: 2.25rem;
    --font-size-42: 2.625rem;
    --font-size-48: 3rem;
    --font-size-54: 3.375rem;
    --font-size-60: 3.75rem;
    --font-size-68: 4.25rem;
    --font-size-76: 4.75rem;
    --font-size-84: 5.25rem;
    --font-size-92: 5.75rem;

    /**
     * Fonts.
     */
    --font-body: {{ settings.font_body.family }}, {{ settings.font_body.fallback_families }};
    --font-heading: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }};

    /**
     * Font weight.
     */
    --font-weight-regular: 400;
    --font-weight-medium: 500;
    --font-weight-bold: 700;

    /**
     * Layout.
     */
    --container-gutter: var(--spacing-16);
    --max-content-width: 100%;
    --full-header-height: 0;
    --inner-header-height: 0;

    /**
     * Buttons.
     */
    --button-height: 50px;
    --button-height-small: 40px;
    --button-border-radius: 5px;

    /**
     * Other.
     */
    --chevron-down-background-url: url({{ chevron_down_icon | base64_encode | prepend: 'data:image/svg+xml;base64,' | json }});
  }

  @media (min-width: 768px) {
    :root {
      --container-gutter: var(--spacing-32);
    }
  }

  {% for color_scheme in settings.color_schemes %}
    .color-{{ color_scheme.id }} {
      --color-background: {{ color_scheme.settings.background }};
      --color-text: {{ color_scheme.settings.text }};
      --color-text-light: {{ color_scheme.settings.text_light }};
      --color-backdrop: {{ color_scheme.settings.backdrop }};
      --color-border: {{ color_scheme.settings.borders }};
      --color-border-lighter: {{ color_scheme.settings.borders | color_lighten: 8 | color_to_rgb }};
      --color-success: {{ color_scheme.settings.success }};
      --color-error: {{ color_scheme.settings.error }};
      --color-primary-button-background: {{ color_scheme.settings.primary_button_background }};
      --color-primary-button-label: {{ color_scheme.settings.primary_button_label }};
      --color-primary-button-border: {{ color_scheme.settings.primary_button_border }};
      --color-primary-button-background-hover: {{ color_scheme.settings.primary_button_background_hover }};
      --color-primary-button-label-hover: {{ color_scheme.settings.primary_button_label_hover }};
      --color-primary-button-border-hover: {{ color_scheme.settings.primary_button_border_hover }};
      --color-secondary-button-background: {{ color_scheme.settings.secondary_button_background }};
      --color-secondary-button-label: {{ color_scheme.settings.secondary_button_label }};
      --color-secondary-button-border: {{ color_scheme.settings.secondary_button_border }};
      --color-secondary-button-background-hover: {{ color_scheme.settings.secondary_button_background_hover }};
      --color-secondary-button-label-hover: {{ color_scheme.settings.secondary_button_label_hover }};
      --color-secondary-button-border-hover: {{ color_scheme.settings.secondary_button_border_hover }};
    }
  {% endfor %}
</style>
